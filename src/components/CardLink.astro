---
const { href, title, yearSpan, company } = Astro.props
---

<span class="text-xs py-5 main-400 lg:col-span-2 hidden lg:grid">{ yearSpan }</span>
<div
	class="relative flex-col project-item col-span-6 -mt-px lg:hover:bg-main-850"
>
	<p class="text-xs pt-5 px-5 main-400 lg:hidden">{ yearSpan }</p>
	<a class="text-lg text-glow">
		<p class="flex gap-x-2 flex-wrap items-center px-5 lg:pt-5">
			<span>{ title }</span>
			<span>@</span>
			<span class="flex gap-x-2 items-center">
				{ company }
				<svg class="hidden lg:block" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"></path><path d="M13 18l6-6"></path><path d="M13 6l6 6"></path></g></svg>
			</span>
		</p>
	</a>
	<slot />
	<a
		href={href}
		target="_blank"
		class="link-button mb-5 lg:!hidden"
	>
		VISIT SITE
	</a>
	<a
		href={href}
		target="_blank"
		class="absolute top-0 left-0 w-full h-full hidden lg:block"
	/>
</div>

<style lang="scss">
.project-item {
	border: var(--default-border);
	transition: 0.2s ease-in-out;

	&:hover {
		cursor: pointer;

		svg {
			margin-left: 10px;
		}
	}

	svg {
		width: 15px;
		height: 15px;
		transition: 0.2s ease-in-out;
	}
}
</style>