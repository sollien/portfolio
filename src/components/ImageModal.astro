---
import { Image } from "astro:assets"

const { src, alt } = Astro.props
---
<div class="image-modal">
	<Image
		src={src}
		alt={alt}
		class="photography"
	/>
</div>
<script>
	const photographies = document.querySelectorAll(".photography")

	let open: boolean = false

	photographies.forEach((photography) => {
		photography.addEventListener('click', () => {
			open = true
			console.log(open)
		})
	})
</script>

<style lang="scss">
.image-modal {
	display: none;
	justify-content: center;
	align-items: center;
	position: fixed;
	top: 0;
	left: 0;
	height: 100vh;
	width: 100vw;
	background-color: red;
	z-index: 1;
}

.photography {
	padding: 10px;
	height: 80%;
	max-height: 1000px;
	width: auto;
	margin: -1px;
	margin-right: 0;
	margin-bottom: 0;
	border: var(--default-border);
}
</style>