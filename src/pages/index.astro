---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const projects = [
	{
		title: "Cortex",
	},
	{
		title: "Plannr",
	},
	{
		title: "Wedding website",
	},
	{
		title: "Lift"
	}
];
---

<Layout title="Welcome to Astro.">
	<header>Martin Sollien</header>
	<main>
		<section>
			<h2>Projects</h2>
			<div class="items-container">
				{projects.map((project) => <div class="grid-item">{project.title}</div>)}
			</div>
		</section>
	</main>
	<footer>
		Made by me
	</footer>
</Layout>

<style lang="scss">
	@keyframes glow {
		0% {
			box-shadow: inset 0px 0px 20px rgba(211, 255, 252, 0.03),
			0px 0px 20px rgba(211, 255, 252, 0.03);
		}
		50% {
			box-shadow: inset 0px 0px 20px rgba(211, 255, 252, 0.08),
			0px 0px 20px rgba(211, 255, 252, 0.08);
		}
		100% {
			box-shadow: inset 0px 0px 20px rgba(211, 255, 252, 0.03),
			0px 0px 20px rgba(211, 255, 252, 0.03);
		}
	}
	* {
		animation: glow 10s infinite;
	}
	header {
		margin: 0 6%;
		padding: 20px 30px;
		border-left: var(--default-border);
		border-right: var(--default-border);
		border-bottom: var(--default-border);
		font-weight: bold;
	}

	footer {
		display: flex;
		justify-content: center;
		margin: 0 6%;
		padding: 20px 30px;
		border-left: var(--default-border);
		border-right: var(--default-border);
	}

	main {
		margin: 0 6%;
	}

	section {
		h2 {
			padding: 100px 30px 10px 30px;
			border-left: var(--default-border);
			border-right: var(--default-border);
		}

		.items-container {
			display: grid;
			grid-template-columns: repeat(20, minmax(0, 1fr));
			border: var(--default-border);
		}
	}

	.grid-item {
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
		aspect-ratio: 1;
		border-right: var(--default-border);

		&:hover {
			cursor: pointer;
			background-color: var(--main-color-85);
		}
	}
</style>
